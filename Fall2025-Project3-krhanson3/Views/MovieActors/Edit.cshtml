@model Fall2025_Project3_krhanson3.Models.MovieActor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Movie–Actor Pair</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <!-- Show validation summary (includes duplicate warning) -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="MovieActorId" />

            <div class="form-group mb-3">
                <label asp-for="MovieId" class="form-label">Select Movie</label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ActorId" class="form-label">Select Actor</label>
                <select asp-for="ActorId" class="form-control" asp-items="ViewBag.ActorId"></select>
                <span asp-validation-for="ActorId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

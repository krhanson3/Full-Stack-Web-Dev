@model Fall2025_Project3_krhanson3.Models.ViewModels.ActorViewModel

@{
    ViewData["Title"] = "Actor Details";
}

<div class="container mt-4">

    <!-- Profile Card -->
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Photo Column -->
            <div class="col-md-4 text-center mt-4">
                @if (Model.Photo != null && Model.Photo.Length > 0)
                {
                    var imageBase64 = Convert.ToBase64String(Model.Photo);
                    var imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img src="@imageSrc" class="rounded img-fluid mb-3"
                         style="max-width: 250px; height: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                         style="width: 250px; height: 250px; border-radius: 10px;">
                        No Photo
                    </div>
                }
            </div>

            <!-- Details Column -->
            <div class="col-md-8">
                <h2 class="fw-bold">@Model.Name</h2>
                <hr />

                <p><strong>Gender:</strong> @Model.Gender</p>
                <p><strong>Age:</strong> @Model.Age</p>

                <p>
                    <strong>IMDB:</strong>
                    @if (!string.IsNullOrEmpty(Model.IMDBUrl))
                    {
                        <a href="@Model.IMDBUrl" target="_blank" class="btn btn-outline-primary btn-sm ms-2">
                            View IMDB Profile
                        </a>
                    }
                    else
                    {
                        <span class="text-muted ms-2">Not available</span>
                    }
                </p>

                <hr />

                <h4 class="mt-4">Movies</h4>
                @if (Model.Movies != null && Model.Movies.Any())
                {
                    <ul class="list-group mt-2">
                        @foreach (var movie in Model.Movies)
                        {
                            <li class="list-group-item">
                                <a asp-controller="Movies"
                                   asp-action="Details"
                                   asp-route-id="@movie.MovieId"
                                   class="text-decoration-none">
                                    @movie.Title
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No movies listed for this actor.</p>
                }

                <hr />
                <!-- Tweets -->
                <h4 class="mt-4">AI-Generated Tweets</h4>

                @if (Model.Tweets != null && Model.Tweets.Any())
                {
                    <div class="mt-3">

                        <p>
                            <strong>Average Sentiment:</strong>
                            <span class="badge bg-info text-dark">
                                @Model.SentimentAverage?.ToString("0.###")
                            </span>
                        </p>

                        <ul class="list-group">
                            @foreach (var tweet in Model.Tweets)
                            {
                                <li class="list-group-item">
                                    <strong>@tweet.User</strong><br />
                                    @tweet.Text
                                    <div class="mt-1">
                                        <span class="badge bg-secondary">Sentiment: @tweet.Sentiment.ToString("0.###")</span>
                                    </div>
                                </li>
                            }
                        </ul>

                    </div>
                }
                else
                {
                    <p class="text-muted">AI tweets not available.</p>
                }

            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ActorId" class="btn btn-primary">
            Edit Actor
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            Back to List
        </a>
    </div>
</div>

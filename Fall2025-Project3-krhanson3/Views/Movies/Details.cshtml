@model Fall2025_Project3_krhanson3.Models.Movies

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-4">

    <!-- Movie Card -->
    <div class="card shadow-lg p-4">
        <div class="row">

            <!-- Poster Column -->
            <div class="col-md-4 text-center mt-4">
                @if (Model.Poster != null && Model.Poster.Length > 0)
                {
                    var imageBase64 = Convert.ToBase64String(Model.Poster);
                    var imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img src="@imageSrc" class="rounded img-fluid mb-3"
                         style="max-width: 250px; height: 350px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                         style="width: 250px; height: 350px; border-radius: 10px;">
                        No Poster
                    </div>
                }
            </div>

            <!-- Movie Details Column -->
            <div class="col-md-8">
                <h2 class="fw-bold">@Model.Title</h2>
                <hr />

                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>

                <p>
                    <strong>IMDB:</strong>
                    @if (!string.IsNullOrEmpty(Model.IMDBUrl))
                    {
                        <a href="@Model.IMDBUrl" target="_blank" class="btn btn-outline-primary btn-sm ms-2">
                            View on IMDB
                        </a>
                    }
                    else
                    {
                        <span class="text-muted ms-2">Not available</span>
                    }
                </p>

                <hr />

                <!-- Actors Section -->
                <h4 class="mt-4">Actors</h4>

                @if (Model.MovieActors != null && Model.MovieActors.Any())
                {
                    <ul class="list-group mt-2">
                        @foreach (var ma in Model.MovieActors)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-controller="Actors"
                                   asp-action="Details"
                                   asp-route-id="@ma.Actor.ActorId"
                                   class="text-decoration-none">
                                    @ma.Actor.Name
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No actors listed for this movie.</p>
                }
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MovieId" class="btn btn-primary">
            Edit Movie
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            Back to List
        </a>
    </div>
</div>

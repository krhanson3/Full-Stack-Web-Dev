@model IEnumerable<Fall2025_Project3_krhanson3.Models.Movies>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Release Year</th>
            <th>IMDB</th>
            <th>Poster</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Genre</td>
                <td>@item.ReleaseYear</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.IMDBUrl))
                    {
                        <a href="@item.IMDBUrl" target="_blank">IMDB</a>
                    }
                </td>
                <td>
                    @if (item.Poster != null && item.Poster.Length > 0)
                    {
                        var imageBase64 = Convert.ToBase64String(item.Poster);
                        var imageSrc = $"data:image/png;base64,{imageBase64}";
                        <img src="@imageSrc" alt="Movie Poster" width="50" height="50" />
                    }
                    else
                    {
                        <span class="badge bg-secondary">No image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-crimson btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-crimson btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-crimson btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
